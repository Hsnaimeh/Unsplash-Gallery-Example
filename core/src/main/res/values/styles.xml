<resources>

    <style name="AppTheme.V2.DarkActionBar" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="bottomSheetDialogTheme">@style/AppTheme.V2.ThemeOverlay.BottomSheetDialog</item>
    </style>

    <style name="AppTheme.V2.Activity.Dialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.V2" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="bottomSheetDialogTheme">@style/AppTheme.V2.ThemeOverlay.BottomSheetDialog</item>
    </style>

    <style name="AppTheme.V2.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="colorControlNormal">@color/color_accent</item>
        <item name="bottomSheetDialogTheme">@style/AppTheme.V2.ThemeOverlay.BottomSheetDialog</item>
    </style>

    <style name="AppTheme.V2.TextInputLayoutOutlinedBox">
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusBottomEnd">5dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusBottomStart">5dp</item>
        <item name="boxCornerRadiusTopEnd">5dp</item>
        <item name="boxCornerRadiusTopStart">5dp</item>
    </style>

    <style name="AppTheme.V2.PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">56dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/color_primary_state_enabled</item>
    </style>

    <style name="AppTheme.V2.PrimaryUnelevatedButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_height">56dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/color_primary_state_enabled</item>
        <item name="cornerRadius">28dp</item>
    </style>

    <style name="AppTheme.V2.PrimaryTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/color_primary_state_enabled</item>
    </style>

    <style name="TransparentActionBar.V2" parent="Widget.MaterialComponents.Light.ActionBar.Solid">
        <item name="background">@android:color/transparent</item>
        <item name="android:displayOptions">showHome|useLogo</item>
        <item name="displayOptions">showHome|useLogo</item>
    </style>

    <style name="AppTheme.V2.Dialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="AppTheme.V2.FullWidthNoTitleDialog" parent="AppTheme.V2.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowSoftInputMode">stateHidden|adjustResize</item>
    </style>

    <style name="AppTheme.V2.ThemeOverlay.BottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppTheme.V2.Widget.BottomSheet</item>
    </style>

    <style name="AppTheme.V2.Widget.BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.BottomSheet</item>
    </style>

    <style name="ShapeAppearanceOverlay.BottomSheet" parent="">
        <item name="cornerSize">0dp</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerSizeTopLeft">30dp</item>
        <item name="cornerSizeTopRight">30dp</item>
    </style>

    <style name="AppTheme.V2.EditText">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textColorHighlight">?colorPrimary</item>
        <item name="android:textCursorDrawable">@drawable/color_edit_text_cursor</item>
    </style>

    <style name="AppTheme.V2.PrimaryTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?android:attr/colorPrimary</item>
    </style>

    <style name="AppTheme.V2.SubTitle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.V2.Toolbar" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorControlNormal">@color/color_accent</item>
    </style>
</resources>
